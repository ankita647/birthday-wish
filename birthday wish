            overflow: hidden;
        }
        #wish {
            font-size: 28px;
            font-weight: bold;
            margin-top: 50px;
            opacity: 0;
            animation: fadeIn 2s forwards;
        }
        #balloons-container {
            display: flex;
            justify-content: center;
            margin-top: 50px;
            flex-wrap: wrap;
        }
        .balloon {
            width: 60px;
            height: 80px;
            background: radial-gradient(circle, #ff4d6d, #c70039);
            border-radius: 50%;
            position: relative;
            margin: 10px;
            cursor: pointer;
            transition: transform 0.2s;
            animation: float 3s infinite ease-in-out alternate;
        }
        .balloon::after {
            content: '';
            width: 2px;
            height: 30px;
            background: black;
            position: absolute;
            bottom: -30px;
            left: 50%;
            transform: translateX(-50%);
        }
        .hidden {
            display: none;
        }
        #cake-container {
            margin-top: 50px;
            opacity: 0;
            animation: fadeIn 2s forwards;
        }
        #cake {
            width: 200px;
        }
        #knife {
            width: 80px;
            position: absolute;
            bottom: 50px;
            left: 50%;
            cursor: grab;
            display: none;
        }
        #confetti {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            display: none;
        }
        @keyframes fadeIn {
            from { opacity: 0; }
